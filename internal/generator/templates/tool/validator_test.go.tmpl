func Test{{.Name}}_Required(t *testing.T) {
	v := validator.New{{.Name}}()

	tests := []struct {
		name    string
		field   string
		value   string
		wantErr bool
	}{
		{
			name:    "valid value",
			field:   "name",
			value:   "John",
			wantErr: false,
		},
		{
			name:    "empty value",
			field:   "name",
			value:   "",
			wantErr: true,
		},
		{
			name:    "whitespace only",
			field:   "name",
			value:   "   ",
			wantErr: true,
		},
	}

	for _, tt := range tests {
		t.Run(tt.name, func(t *testing.T) {
			v := validator.New{{.Name}}()
			v.Required(tt.field, tt.value)

			if tt.wantErr {
				assert.True(t, v.HasErrors())
			} else {
				assert.False(t, v.HasErrors())
			}
		})
	}
}

func Test{{.Name}}_Email(t *testing.T) {
	tests := []struct {
		name    string
		email   string
		wantErr bool
	}{
		{
			name:    "valid email",
			email:   "user@example.com",
			wantErr: false,
		},
		{
			name:    "invalid email - no @",
			email:   "userexample.com",
			wantErr: true,
		},
		{
			name:    "invalid email - no domain",
			email:   "user@",
			wantErr: true,
		},
	}

	for _, tt := range tests {
		t.Run(tt.name, func(t *testing.T) {
			v := validator.New{{.Name}}()
			v.Email("email", tt.email)

			if tt.wantErr {
				assert.True(t, v.HasErrors())
			} else {
				assert.False(t, v.HasErrors())
			}
		})
	}
}

func Test{{.Name}}_MinLength(t *testing.T) {
	v := validator.New{{.Name}}()

	v.MinLength("password", "short", 8)
	assert.True(t, v.HasErrors())

	v = validator.New{{.Name}}()
	v.MinLength("password", "longenough", 8)
	assert.False(t, v.HasErrors())
}
