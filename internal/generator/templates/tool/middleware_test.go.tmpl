package middleware_test

import (
	"net/http"
	"net/http/httptest"
	"testing"

	"{{.ModuleName}}/internal/infrastructure/middleware"
	"{{.ModuleName}}/pkg/logger"
	"github.com/stretchr/testify/assert"
