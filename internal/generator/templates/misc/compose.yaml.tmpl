version: '3.8'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
    environment:
      - {{.ProjectName | upper}}_SERVER_PORT=8080
      - {{.ProjectName | upper}}_LOGLEVEL=info
    restart: unless-stopped

